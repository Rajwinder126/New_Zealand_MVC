@model New_Zealand_MVC.Models.Booking

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="No_of_tickets" class="control-label">No of tickets</label>
                <input asp-for="No_of_tickets" class="form-control" />
                <span asp-validation-for="No_of_tickets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket_price" class="control-label">Ticket price</label>
                <input asp-for="Ticket_price" class="form-control" />
                <span asp-validation-for="Ticket_price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="HotelId" class="control-label"></label>
                <select asp-for="HotelId" class ="form-control" asp-items="ViewBag.HotelId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AttractionId" class="control-label"></label>
                <select asp-for="AttractionId" class ="form-control" asp-items="ViewBag.AttractionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EventId" class="control-label"></label>
                <select asp-for="EventId" class ="form-control" asp-items="ViewBag.EventId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

