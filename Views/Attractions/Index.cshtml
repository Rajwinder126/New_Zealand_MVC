@model IEnumerable<New_Zealand_MVC.Models.Attraction>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Attraction_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attraction_Place)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attraction_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attraction_Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attraction_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attraction_Open_Hours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Attraction_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attraction_Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attraction_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attraction_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attraction_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attraction_Open_Hours)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
